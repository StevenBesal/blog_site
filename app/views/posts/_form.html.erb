<%= form_for(post) do |f| %>
<% if post.errors.any?  %>
  <h2><%= pluralize(post.errors.count, 'error') %> to fix</h2>
  <ul>
    <% post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <br>
  <div class="field">
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :body %>
    <br>
    <%= f.text_area :body %>
  </div>
  <br>
  <div class="field">
    <%= f.label :author %>
    <br>
    <%= f.text_field :author %>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>
<% end  %>
